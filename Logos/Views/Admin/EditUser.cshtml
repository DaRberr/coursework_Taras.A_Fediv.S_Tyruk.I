@{
}

<header>
	<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
		<div class="container-fluid">
			<a class="navbar-brand ms-lg-5 " asp-controller="Home" asp-action="Index">Logos</a>
		</div>
	</nav>
</header>


<form method="post" asp-controller="Admin" asp-action="EditUser" class="p-5">
	<div asp-validation-summary="ModelOnly"></div>

	<div class="form-group">
		<label for="exampleInputEmail1" class="form-label mt-4" asp-for="FirstName">FirstName</label>
		<input type="text" class="form-control" placeholder="Enter Name" name='FirstName' asp-for="FirstName" required>
		<span asp-validation-for="FirstName"></span>
	</div>
	<div class="form-group">
		<label for="exampleInputEmail1" class="form-label mt-4" asp-for="LastName">LastName</label>
		<input type="text" class="form-control" placeholder="Enter Last Name" name='LastName' asp-for="LastName" required>
		<span asp-validation-for="LastName"></span>
	</div>
	<div class="form-group">
		<label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
		<input type="email" class="form-control" placeholder="Enter email" name='Email' asp-for="Email" required>
		<span asp-validation-for="Email"></span>
	</div>
	<div class="form-group">
		<label for="exampleInputPassword1" class="form-label mt-4" asp-for="Password">Password</label>
		<input type="password" class="form-control" placeholder="Password" autocomplete="on" name='Password' asp-for="Password" required>
		<span asp-validation-for="Password"></span>
	</div>
	<input type='radio' name='userType' value='User' checked> Користувач<br>
	<input type='radio' name='userType' value='Courier'> Курьєр<br>
	<input type='radio' name='userType' value='Admin'> Адмін<br>
	<input type='hidden' name="userId" value="@Model.GetStringId" />

	<button type="submit" class="btn btn-outline-info ms-lg-4">Change</button>
</form>