@model Logos.Models.ViewModel.Home.HomeOrderViewModel;

<header>
	<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
		<div class="container-fluid">
			<div class="container">
				<div class="row justify-content-md-center">
					<div class="col col-lg-2">
					</div>
					<div class="col-md-auto">
						<a class="navbar-brand ms-lg-5 " style="text-align:center" asp-controller="Home" asp-action="Index">Logos</a>
					</div>
					<div class="col col-lg-2">
					</div>
				</div>
			</div>
		</div>
	</nav>
</header>



<div class="container px-4">
	<div class="row gx-5">
		<div class="col-5 mt-5">
			<div class="p-2 border bg-light">
				<h2 style="text-align:center">Make an order</h2>
				<form method="post" asp-controller="Home" asp-action="Orders">
					<div asp-validation-summary="ModelOnly"></div>

					<div class="row">
						<div class="col">
							<div class="form-group">
								<label for="exampleInputEmail1" class="form-label mt-4" asp-for="User.FirstName">FirstName</label>
								<input type="text" class="form-control" placeholder="Enter Name" asp-for="User.FirstName">
								<span asp-validation-for="User.FirstName"></span>
							</div>
						</div>
						<div class="col">
							<div class="form-group">
								<label for="exampleInputEmail1" class="form-label mt-4" asp-for="User.LastName">LastName</label>
								<input type="text" class="form-control" placeholder="Enter Last Name" asp-for="User.LastName">
								<span asp-validation-for="User.LastName"></span>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1" class="form-label mt-4">Phone Number</label>
						<input type="number" class="form-control" placeholder="Enter Number" asp-for="Number" name="Number" required>
						<span asp-validation-for="Number"></span>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1" class="form-label mt-4">Location</label>
						<input type="text" class="form-control" placeholder="Enter Location" asp-for="Location" name="Location" required>
						<span asp-validation-for="Location"></span>
					</div>
					@{
						for (int i = 0; i < Model.User.Dishes.Count(); i++)
						{
							<div class="row">
								<div class="col">
									<img src="~/Image/@Model.User.Dishes[i].UrlOnPhoto" style="max-height:70px; max-width:70px" />
								</div>
								<div class="col mt-4">
									@Model.User.Dishes[i].Title
								</div>
								<div class="col mt-4 text-body">
									@Model.User.Dishes[i].Price$
								</div>
							</div>
						}
					}

					<div class="row">
						<div class="col">
							<button type="submit" class="btn btn-outline-success mt-2">Buy</button>
						</div>
						<div class="col">
							<p class="mt-2">Total: @Model.User.TotalMoney()$</p>
						</div>
					</div>

				</form>
			</div>
		</div>
		<div class="col">
			<div class="ms-lg-5">
				<img src="~/Image/ClearEat.png" style="max-height:1200px; max-width: 500px; " />
			</div>
		</div>
	</div>
</div>


